<UserControl x:Class="dnSpy.Extension.MCP.McpSettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Settings Section -->
        <StackPanel Grid.Row="0">
            <CheckBox Content="Enable MCP Server" IsChecked="{Binding EnableServer}" Margin="0,0,0,10"/>
            <TextBlock Text="MCP Server Configuration" FontWeight="Bold" Margin="0,10,0,5"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Host:" Grid.Row="0" Grid.Column="0" Margin="0,5,10,5" VerticalAlignment="Center"/>
                <TextBox Text="{Binding Host, UpdateSourceTrigger=PropertyChanged}" Grid.Row="0" Grid.Column="1" Margin="0,5,0,5" MinWidth="200"/>

                <TextBlock Text="Port:" Grid.Row="1" Grid.Column="0" Margin="0,5,10,5" VerticalAlignment="Center"/>
                <TextBox Text="{Binding Port, UpdateSourceTrigger=PropertyChanged}" Grid.Row="1" Grid.Column="1" Margin="0,5,0,5" MinWidth="200"/>
            </Grid>
            <TextBlock Margin="0,10,0,10"
                       FontStyle="Italic"
                       Foreground="Gray">
                <Run Text="Note: Server starts/stops immediately when enabled/disabled."/>
                <LineBreak/>
                <Run Text="Host/Port changes require restarting dnSpy."/>
            </TextBlock>
        </StackPanel>

        <!-- Log Section -->
        <GroupBox Grid.Row="1" Header="Server Log" Margin="0,10,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <ListBox Grid.Row="0"
                         x:Name="LogListBox"
                         ItemsSource="{Binding LogMessages}"
                         Height="200"
                         ScrollViewer.HorizontalScrollBarVisibility="Auto"
                         ScrollViewer.VerticalScrollBarVisibility="Auto"
                         FontFamily="Consolas"
                         FontSize="11">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Padding" Value="2"/>
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>

                <Button Grid.Row="1"
                        Content="Copy All Logs to Clipboard"
                        Click="CopyLogsButton_Click"
                        Margin="0,5,0,0"
                        Padding="10,5"
                        HorizontalAlignment="Left"/>

                <TextBlock Grid.Row="2"
                           Margin="0,5,0,0"
                           FontSize="10"
                           Foreground="Gray"
                           Text="Server status and errors will appear here. Use the button above to copy all logs."/>
            </Grid>
        </GroupBox>
    </Grid>
</UserControl>
